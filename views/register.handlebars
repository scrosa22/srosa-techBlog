<section class="card my-2">
  <header class="bg-primary p-1 text-white fw-bold ps-3">
    Register
  </header>
  <section class="p-4">
    <section>
        <form class="form register-form">
            <section class="user-input">
                <label>Username: </label>
                <input class="form-input" id="username-register" required />
            </section>
            <section class="user-input">
                <label>Email: </label>
                <input class="form-input" id="email-register" required />
            </section>
            <section class="user-input">
                <label>Password: </label>
                <input class="form-input" type="password" id="password-register" required />
            </section>
            <section class="user-input">
                <button type="submit">Register</button>
            </section>
        </form>
        <hr>
    </section>
    <section>
        <a href="/login">Login to existing account</a>
    </section>
  </section>
</section>
<script src="./js/register.js"></script>